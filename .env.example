# LLM (AWS Bedrock)
# Option 1: IAM access key pair
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Option 2: Bearer token (use this OR the access key pair above, not both)
AWS_BEARER_TOKEN_BEDROCK=
# Sonnet 4.5 requires an inference profile ARN (not a bare model ID).
# Format: arn:aws:bedrock:<region>:<account>:inference-profile/global.anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0

# Image Generation
FAL_KEY=

# Video - HeyGen
HEYGEN_API_KEY=
HEYGEN_AVATAR_ID_FOUNDER=
HEYGEN_AVATAR_ID_PROFESSIONAL=

# Video - Veo3
GOOGLE_API_KEY=

# Publishing - LinkedIn
LINKEDIN_ACCESS_TOKEN=

# Publishing - X/Twitter
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# Publishing - YouTube
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# Publishing - Medium
MEDIUM_ACCESS_TOKEN=

# System
DATABASE_URL=sqlite+aiosqlite:///./autopilot.db
LOG_LEVEL=INFO
PORT=8001

# Demo/Production Mode
# Set to true for investor demos (uses seeded data, no live agents)
# Set to false for real data collection (runs agents on schedule)
DEMO_MODE=true
SEED_ON_STARTUP=true

# Cost Control
# Maximum daily cost in USD - agents pause if exceeded
DAILY_COST_LIMIT=5.00

# Agent Intervals (seconds) - only used in production mode
SCOUT_INTERVAL=1800      # 30 minutes
TRACKER_INTERVAL=3600    # 60 minutes
ENGAGEMENT_INTERVAL=1800 # 30 minutes
FEEDBACK_INTERVAL=86400  # 24 hours
REVIEWER_INTERVAL=604800 # 7 days
